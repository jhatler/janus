{
  "extends": "@tsconfig/node22/tsconfig.json",
  "include": [
    "src/*.ts",
    "src/**/*.ts",
    "test/*.ts",
    "test/**/*.ts"
  ],
  "exclude": [],
  "compilerOptions": {
    "allowUnreachableCode": false,
    "allowUnusedLabels": false,
    "baseUrl": ".",
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": false,
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "paths": {
      "@janus/*": [
        "src/*"
      ]
    },
    "pretty": true,
    "sourceMap": true,
    "strict": true,
    "types": [
      "node"
    ]
  }
}
