{
  "extends": [
    "@tsconfig/node22/tsconfig.json"
  ],
  "include": [
    "packages/*/src/*.ts",
    "packages/*/src/**/*.ts",
    "packages/*/test/*.ts",
    "packages/*/test/**/*.ts",
    "packages/release-trigger/.prettierrc.js"
  ],
  "exclude": [
    "**/*.json"
  ],
  "compilerOptions": {
    "baseUrl": ".",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "types": [
      "node"
    ]
  }
}
